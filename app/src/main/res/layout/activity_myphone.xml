<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:toos="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
              android:fitsSystemWindows="true"
              android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/AppBarTheme"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="15dp"
                android:text="电池状态"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"/>

            <include layout="@layout/item_line"/>
            <!--温度-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="电池温度"
                    android:textColor="#2d2d2d"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_tem"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    tools:text="38.1℃"/>
            </RelativeLayout>
            <include layout="@layout/item_line"/>
            <!--电压-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="电池电压"
                    android:textColor="#2d2d2d"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_dianya"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    tools:text="4.1V"/>
            </RelativeLayout>
            <include layout="@layout/item_line"/>
            <!--状态-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="电池温度"
                    android:textColor="#2d2d2d"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    tools:text="充满电"/>
            </RelativeLayout>
            <include layout="@layout/item_line"/>
            <!--工艺-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="电池工艺"
                    android:textColor="#2d2d2d"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:text="Li-ion"/>
            </RelativeLayout>
            <include layout="@layout/item_line"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="15dp"
                android:text="可用时间"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"/>

            <include layout="@layout/item_line"/>
            <!--通话-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="通话"
                    android:textColor="#2d2d2d"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_time_call"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    tools:text="8小时15分钟"/>
            </RelativeLayout>
            <include layout="@layout/item_line"/>
            <!--3g-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="3G上网"
                    android:textColor="#2d2d2d"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_time_3g"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    tools:text="8小时15分钟"/>
            </RelativeLayout>
            <include layout="@layout/item_line"/>
            <!--wifi-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="WIFI上网"
                    android:textColor="#2d2d2d"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_time_wifi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    tools:text="8小时15分钟"/>
            </RelativeLayout>
            <include layout="@layout/item_line"/>
            <!--视频-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="看视频"
                    android:textColor="#2d2d2d"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_time_vadio"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    tools:text="8小时15分钟"/>
            </RelativeLayout>
            <include layout="@layout/item_line"/>
            <!--游戏-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="玩游戏"
                    android:textColor="#2d2d2d"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_time_game"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    tools:text="8小时15分钟"/>
            </RelativeLayout>
            <include layout="@layout/item_line"/>
            <!--music-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="听音乐"
                    android:textColor="#2d2d2d"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_time_music"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    tools:text="8小时15分钟"/>
            </RelativeLayout>
            <include layout="@layout/item_line"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>